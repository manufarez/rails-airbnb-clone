<div class="col-sm-6">
  <div class="booking">

  <%= simple_form_for ([ sozee, booking ]) do |f| %>
    <%= f.input :location, :label => "Lieu de votre animation", class: "location" %>
    <%= f.input :starts_at, :label => "Date de début", as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.input :ends_at, :label => "Date de fin", as: :string, required: false, input_html: {class: "datepicker"} %>
    <%= f.submit "Réserver le sozee !", class: "bouton" %>
  <% end %>
  </div>
</div>
