<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

      <h2>S'inscrire</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :username, :label => "Votre nom", required: true, autofocus: true %>
          <%= f.input :city, :label => "Votre adresse", required: true, autofocus: true %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password, :label => "Mot de passe", required: true, placeholder: "******", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Connexion" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
