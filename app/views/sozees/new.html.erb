<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

      <h1>Deviens un sozee</h1>
      <%= simple_form_for @sozee do |f| %>
        <%= f.input :sozee_of, :label => "De qui êtes vous le sozee ?", input_html: { class: "form-control", required: true } %>
        <%= f.input :sozee_name, :label => "Quel est votre nom de scène ?", input_html: { class: "form-control", required: true } %>
        <%= f.input :category, :label => "Catégorie", collection: ["Chanteur", "Acteur", "Homme polique", "Sportif", "Autre"], input_html: { class: "form-control", required: true } %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :description, :label => "Décrivez vos services !" %>
        <%= f.input :price_per_hour, :label => "Prix par heures", input_html: { min: '0', step: 'any' }%>
        <%= f.submit "Devenir sozee !", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

