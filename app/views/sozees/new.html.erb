<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

      <h1>Deviens un sozee</h1>
      <%= simple_form_for @sozee do |f| %>
        <%= f.input :sozee_name, input_html: { class: "form-control", required: true } %>
        <%= f.input :category, input_html: { class: "form-control", required: true } %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :description %>
        <%= f.input :price_per_hour, input_html: { class: "form-control", required: true } %>
        <%= f.submit "Devenir sozee !", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>
